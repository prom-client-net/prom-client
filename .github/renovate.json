{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [":dependencyDashboard", "group:monorepos"],
  "labels": ["dependencies"],
  "assignees": ["phnx47"],
  "semanticCommits": "disabled",
  "commitMessageAction": "Bump",
  "commitMessageTopic": "{{depName}}",
  "ignoreDeps": ["Microsoft.SourceLink.GitHub", "StyleCop.Analyzers"],
  "packageRules": [
    {
      "automerge": true,
      "groupName": "prom-client",
      "matchSourceUrls": ["https://github.com/prom-client-net{/,}**"]
    },
    {
      "automerge": true,
      "groupName": "coverlet packages",
      "matchSourceUrls": ["https://github.com/coverlet-coverage{/,}**"]
    },
    {
      "automerge": true,
      "extends": ["monorepo:vstest", "monorepo:xunit-dotnet"]
    },
    {
      "matchManagers": ["github-actions"],
      "enabled": false
    }
  ]
}
